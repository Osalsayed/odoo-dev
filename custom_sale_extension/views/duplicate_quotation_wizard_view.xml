<odoo>
    <record id="view_duplicate_quotation_wizard" model="ir.ui.view">
        <field name="name">duplicate.quotation.wizard.form</field>
        <field name="model">duplicate.quotation.wizard</field>
        <field name="arch" type="xml">
            <form string="Duplicate Quotation Warning">
                <div class="o_row">
                    <label for="duplicate_order_id"
                           string="A quotation with the same customer and products already exists:"
                           class="o_form_label"/>
                    <field name="duplicate_order_id" readonly="1"/>
                </div>


                <footer>
                    <button name="action_confirm_anyway"
                            string="Confirm Anyway"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
