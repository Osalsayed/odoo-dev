<odoo>
                   <!--    form    -->
    <record id="view_order_form_inherit_internal_ref" model="ir.ui.view">
        <field name="name">sale.order.form.internal.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/notebook" position="before">
                <group>
                    <field name="internal_reference"/>
                    <field name="has_validator_group" invisible="1"/>
                </group>
            </xpath>


            <xpath expr="//header" position="inside">
                <button name="action_internal_confirm"
                        string="Internal confirmation"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': ['|', '|', ('state', 'in', ['sale', 'cancel']), ('has_validator_group', '=', False), ('internal_reference', '!=', False)]}"/>
            </xpath>

              <xpath expr="//header" position="inside">
            <button name="%(action_report_internal_sale_confirmation)d"
                    string="Print Internal Confirmation"
                    type="action"
                    class="btn-primary"
                    attrs="{'invisible': [('internal_reference','=',False)]}"/>
        </xpath>

        </field>
    </record>
</odoo>